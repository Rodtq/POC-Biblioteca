@model POC_MVC_Biblioteca.ViewModels.BooksViewModel
<section id="acervo">
  <h3>Acervo</h3>
  <div id="container" class="container-fluid">
    <div id="navegacao_acervo" class="row acervo-navegacao">
      <ul class="nav nav-pills navbar-nav">
        <li><a id="Consultas" data-navigation-partial=@Url.Action("BooksCatalogNavigation", "BooksCatalog", new { partialViewName = "_ConsultaLivros" })>Consultar</a></li>
        <li><a id="Cadastro" data-navigation-partial=@Url.Action("BooksCatalogNavigation", "BooksCatalog", new { partialViewName = "_CadastroLivros"})>Cadastrar</a></li>
        <li><a id="Reservas" data-navigation-partial="@Url.Action("BooksCatalogNavigation", "BooksCatalog", new { partialViewName = "_ReservaLivros" })">Reservas</a></li>
        <li><a id="LivrosEmprestados" data-navigation-partial="@Url.Action("BooksCatalogNavigation", "BooksCatalog", new { partialViewName = "_EmprestimoLivros" })">Livros Emprestados</a></li>
        <li><a id="EntregasLivros" data-navigation-partial="@Url.Action("BooksCatalogNavigation", "BooksCatalog", new { partialViewName = "_EntregaLivros" })">Entregas</a></li>
      </ul>
    </div>
    <div id="separador" class="row acervo-separador">
      <div id="menuLateralEsquerdo" class="col-lg-3 acervo-menu-esquerda">
        <div id="reservaLocacao" class="container acervo-reserva-locacao">
          <div id="tituloLocacao" class="row">
            <label id="lblTituloLocacao">Reserva de locação</label>
          </div>
          <div id="containerLocacao" class="row">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { name = "Index" }))
            {
                @Html.AntiForgeryToken()
                <input type="text" title="Login" name="UserName" />
                <input type="password" title="Password" name="Password" />
                <div>
                  <input type="submit" value="Sign In" id="login">
                  @Html.ActionLink("Sign up", "Index", "User")
                </div>
            }
            <div>
              <a>Forgot your password</a>
            </div>
          </div>
        </div>
        <div id="categorias" class="container acervo-categorias">
          <div id="tituloCategorias" class="row">
            <label>Categorias</label>
          </div>
          <div id="containerCategorias" class="row">
            <ul>
              @foreach (var category in Model.CataegoriesList)
              {
                  <li><a>@category.Name</a></li>
              }
            </ul>
          </div>
        </div>
      </div>
      <div id="conteudoDireita" class="col-lg-9 acervo-menu-direita">
        @{
            Html.RenderAction("GetBooks", "BooksCatalog");
        }
      </div>
    </div>
  </div>
</section>
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
  $(document).ready(function () {
    Navigation($("a[data-navigation-partial]"), $("#conteudoDireita"));
  });
</script>