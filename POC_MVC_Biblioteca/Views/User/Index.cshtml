@using POC_MVC_Biblioteca.ViewModels
@{
    ViewBag.Title = "Index";
}
<section id="Usuario">
  <div>
    <h2>Clientes</h2>
  </div>

  <div id="cliente-navegacao" class="container-fluid">
    
    <div class="row">
      <ul class="nav navbar-nav">
        <li><a data-navigation-partial="@Url.Action("UserNavigation", "User", new { partialViewName = "_UserList" })">Listar Usuários </a></li>
        <li><a data-navigation-partial="@Url.Action("UserNavigation", "User", new { partialViewName = "_UserRegister" })">Cadastrar Usuarios</a></li>
        <li><a data-navigation-partial="@Url.Action("UserNavigation", "User", new { partialViewName = "_UserEdit" })">Editar Usuarios</a></li>
        <li><a data-navigation-partial="@Url.Action("UserNavigation", "User", new { partialViewName = "_UserDelete" })">Deletar Usuario</a></li>
      </ul>
    </div>
  </div>

  <div id="container-partials">
    @{
        Html.RenderAction("GetAllUsers", "User");
    }
  </div>
</section>

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
  $(document).ready(function () {
    $("a").click(function (e) {
      var partialName = $(this).data('navigation-partial');
      $.ajax({
        method: "GET",
        url: partialName,
        data: "",
        success: function (data) {
          $("#container-partials").html(data);
        }
      });
    });
  });
</script>
