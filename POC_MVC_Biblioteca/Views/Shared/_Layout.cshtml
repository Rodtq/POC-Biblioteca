<!DOCTYPE html>
<html>
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title - SMARTBOOKS - Biblioteca Smart</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    
    @*<div>@Html.ActionLink("SmartBooks", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</div>*@
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <img src="~/Content/images/icon32-sccp-black.png" class="logo-small" />
        @Html.ActionLink("SmartBooks", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

          <!--The table downway is a link for another pages like Home, About and Contact-->

          <li>@Html.ActionLink("Acervo", "Index", "BooksCatalog")</li>
          <li>@Html.ActionLink("Clientes", "Index", "User")</li>
          <li>@Html.ActionLink("Doar um livro", "Contact", "Home")</li>
          <li>@Html.ActionLink("Sugestões", "About", "Home")</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>Copyright &copy; @DateTime.Now - Research and Development Smart Modular Technologies Brazil. All rights reserved.</p>
    </footer>
  </div>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
</body>
</html>
